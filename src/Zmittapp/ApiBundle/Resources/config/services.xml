<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <parameters>
        <parameter key="zmittapp_api.domain_manager.default.class">Zmittapp\ApiBundle\DomainManager\DefaultManager</parameter>
        <parameter key="zmittapp_api.domain_manager.menuitem.class">Zmittapp\ApiBundle\DomainManager\MenuItemManager</parameter>

        <parameter key="zmittapp_api.form_handler.create_form.class">Zmittapp\ApiBundle\Form\Handler\CreateFormHandler</parameter>

    </parameters>

    <services>
        <!-- Domain Managers -->

        <service id="zmittapp_api.domain_manager.restaurant" class="%zmittapp_api.domain_manager.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>ZmittappApiBundle:Restaurant</argument>
        </service>

        <service id="zmittapp_api.domain_manager.user" class="%zmittapp_api.domain_manager.default.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>ZmittappApiBundle:User</argument>
        </service>

        <service id="zmittapp_api.domain_manager.menuitem" class="%zmittapp_api.domain_manager.menuitem.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>ZmittappApiBundle:MenuItem</argument>
        </service>


        <!-- Form Handlers -->

        <service id="zmittapp_api.form_handler.restaurant" class="%zmittapp_api.form_handler.create_form.class%">
            <argument type="service" id="zmittapp_api.domain_manager.restaurant" />
        </service>

        <service id="zmittapp_api.form_handler.menuitem" class="%zmittapp_api.form_handler.create_form.class%">
            <argument type="service" id="zmittapp_api.domain_manager.menuitem" />
        </service>

        <service id="zmittapp_api.form_handler.user" class="%zmittapp_api.form_handler.create_form.class%">
            <argument type="service" id="zmittapp_api.domain_manager.user" />
        </service>

    </services>

</container>
